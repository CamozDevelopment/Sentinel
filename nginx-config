# Nginx configuration for Discord Bot Dashboard
# Place this file in: /etc/nginx/sites-available/bot-dashboard
# Then create symlink: sudo ln -s /etc/nginx/sites-available/bot-dashboard /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name vmi3007350.contaboserver.net;

    # Redirect all HTTP to HTTPS (after SSL is set up)
    # Uncomment these lines after setting up SSL
    # return 301 https://$server_name$request_uri;

    # Temporarily allow HTTP access before SSL setup
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
}

