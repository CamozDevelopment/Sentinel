<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Panel - Sentinel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#5865f2',
                        secondary: '#7289da',
                        accent: '#eb459e',
                        dark: '#0a0e27',
                        'dark-alt': '#0f1629',
                        surface: '#1a1f3a'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-dark via-dark-alt to-surface text-white min-h-screen">
    <!-- Animated Background -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
        <div class="absolute top-0 -left-40 w-96 h-96 bg-accent rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
        <div class="absolute bottom-0 -right-40 w-96 h-96 bg-primary rounded-full mix-blend-multiply filter blur-3xl opacity-20"></div>
    </div>

    <!-- Navbar -->
    <nav class="fixed top-0 w-full z-50 bg-dark/80 backdrop-blur-xl border-b border-accent/30">
        <div class="max-w-7xl mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="/" class="flex items-center gap-3 group">
                    <div class="w-12 h-12 bg-gradient-to-br from-accent to-primary rounded-xl flex items-center justify-center shadow-lg shadow-accent/40">
                        <i class="fas fa-crown text-xl"></i>
                    </div>
                    <span class="text-2xl font-black tracking-tight">Owner Panel</span>
                </a>
                <div class="flex items-center gap-6">
                    <a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a>
                    <a href="/dashboard" class="text-gray-300 hover:text-white transition-colors">Dashboard</a>
                    <a href="/logout" class="px-6 py-2 bg-red-600/20 border border-red-500/40 rounded-xl font-bold hover:bg-red-600/30 transition-all">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="relative z-10 pt-24 px-6 pb-12">
        <div class="max-w-7xl mx-auto">
            <!-- Welcome Section -->
            <div class="mb-12">
                <div class="flex items-center gap-4 mb-6">
                    <% if (user.avatar) { %>
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar" class="w-20 h-20 rounded-full border-4 border-accent shadow-lg shadow-accent/50">
                    <% } else { %>
                        <div class="w-20 h-20 bg-gradient-to-br from-accent to-primary rounded-full flex items-center justify-center border-4 border-accent shadow-lg">
                            <i class="fas fa-user text-3xl"></i>
                        </div>
                    <% } %>
                    <div>
                        <h1 class="text-4xl font-black bg-gradient-to-r from-accent to-primary bg-clip-text text-transparent">
                            Welcome, <%= user.username %>
                        </h1>
                        <p class="text-gray-400 text-lg">Full system access granted</p>
                    </div>
                </div>
            </div>

            <!-- System Stats -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
                <div class="bg-surface/60 backdrop-blur-xl border border-accent/20 rounded-2xl p-6 hover:border-accent transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-server text-3xl text-accent"></i>
                        <div class="px-3 py-1 bg-green-500/20 border border-green-500/40 rounded-full text-green-500 text-xs font-bold">ONLINE</div>
                    </div>
                    <div class="text-3xl font-black mb-2"><%= stats.totalGuilds %></div>
                    <div class="text-sm text-gray-400 font-semibold">Total Servers</div>
                </div>

                <div class="bg-surface/60 backdrop-blur-xl border border-primary/20 rounded-2xl p-6 hover:border-primary transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-users text-3xl text-primary"></i>
                    </div>
                    <div class="text-3xl font-black mb-2"><%= stats.totalUsers.toLocaleString() %></div>
                    <div class="text-sm text-gray-400 font-semibold">Total Users</div>
                </div>

                <div class="bg-surface/60 backdrop-blur-xl border border-secondary/20 rounded-2xl p-6 hover:border-secondary transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-clock text-3xl text-secondary"></i>
                    </div>
                    <div class="text-3xl font-black mb-2">
                        <%= Math.floor(stats.uptime / 86400) %>d <%= Math.floor((stats.uptime % 86400) / 3600) %>h
                    </div>
                    <div class="text-sm text-gray-400 font-semibold">Uptime</div>
                </div>

                <div class="bg-surface/60 backdrop-blur-xl border border-green-500/20 rounded-2xl p-6 hover:border-green-500 transition-all hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <i class="fas fa-memory text-3xl text-green-500"></i>
                    </div>
                    <div class="text-3xl font-black mb-2">
                        <%= Math.round(stats.memoryUsage.heapUsed / 1024 / 1024) %>MB
                    </div>
                    <div class="text-sm text-gray-400 font-semibold">Memory Usage</div>
                </div>
            </div>

            <!-- Bot Info -->
            <div class="bg-surface/60 backdrop-blur-xl border border-accent/20 rounded-2xl p-8 mb-12">
                <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
                    <i class="fas fa-robot text-accent"></i>
                    Bot Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <div class="text-sm text-gray-400 mb-1">Bot Username</div>
                        <div class="text-xl font-bold"><%= stats.botUser.tag %></div>
                    </div>
                    <div>
                        <div class="text-sm text-gray-400 mb-1">Bot ID</div>
                        <div class="text-xl font-mono"><%= stats.botUser.id %></div>
                    </div>
                    <div>
                        <div class="text-sm text-gray-400 mb-1">Started At</div>
                        <div class="text-xl font-bold"><%= new Date(stats.readyTimestamp).toLocaleString() %></div>
                    </div>
                    <div>
                        <div class="text-sm text-gray-400 mb-1">Process ID</div>
                        <div class="text-xl font-mono"><%= process.pid %></div>
                    </div>
                </div>
            </div>

            <!-- Global Bans Summary -->
            <div class="bg-surface/60 backdrop-blur-xl border border-red-500/20 rounded-2xl p-8 mb-12">
                <h2 class="text-2xl font-black mb-6 flex items-center gap-3">
                    <i class="fas fa-ban text-red-500"></i>
                    Global Bans Network
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                    <div class="text-center p-4 bg-red-500/10 border border-red-500/30 rounded-xl">
                        <div class="text-4xl font-black text-red-500 mb-2"><%= globalBans.length %></div>
                        <div class="text-sm text-gray-400 font-semibold">Total Global Bans</div>
                    </div>
                    <div class="text-center p-4 bg-yellow-500/10 border border-yellow-500/30 rounded-xl">
                        <div class="text-4xl font-black text-yellow-500 mb-2">
                            <%= globalBans.filter(b => b.appeals && b.appeals.length > 0).length %>
                        </div>
                        <div class="text-sm text-gray-400 font-semibold">Pending Appeals</div>
                    </div>
                    <div class="text-center p-4 bg-green-500/10 border border-green-500/30 rounded-xl">
                        <div class="text-4xl font-black text-green-500 mb-2">
                            <%= Math.round((globalBans.length / stats.totalGuilds) * 100) %>%
                        </div>
                        <div class="text-sm text-gray-400 font-semibold">Protection Rate</div>
                    </div>
                </div>
                <a href="/dashboard" class="inline-block px-6 py-3 bg-red-600/20 border border-red-500/40 rounded-xl font-bold hover:bg-red-600/30 transition-all">
                    <i class="fas fa-gavel mr-2"></i>Manage Global Bans
                </a>
            </div>

            <!-- Server List -->
            <div class="bg-surface/60 backdrop-blur-xl border border-primary/20 rounded-2xl p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-2xl font-black flex items-center gap-3">
                        <i class="fas fa-list text-primary"></i>
                        All Servers (<%= guilds.length %>)
                    </h2>
                    <div class="flex items-center gap-4">
                        <input type="text" id="searchGuilds" placeholder="Search servers..." class="px-4 py-2 bg-dark/50 border border-primary/20 rounded-xl focus:border-primary focus:outline-none transition-colors">
                        <select id="sortGuilds" class="px-4 py-2 bg-dark/50 border border-primary/20 rounded-xl focus:border-primary focus:outline-none transition-colors">
                            <option value="members">Sort by Members</option>
                            <option value="name">Sort by Name</option>
                            <option value="date">Sort by Join Date</option>
                        </select>
                    </div>
                </div>

                <div class="space-y-4 max-h-[600px] overflow-y-auto pr-4" id="guildList">
                    <% guilds.forEach(guild => { %>
                        <div class="bg-dark/50 border border-primary/10 rounded-xl p-6 hover:border-primary/30 transition-all guild-item" data-name="<%= guild.name.toLowerCase() %>" data-members="<%= guild.memberCount %>" data-date="<%= guild.createdAt.getTime() %>">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-4">
                                    <% if (guild.iconURL) { %>
                                        <img src="<%= guild.iconURL %>" alt="<%= guild.name %>" class="w-16 h-16 rounded-xl border-2 border-primary/30">
                                    <% } else { %>
                                        <div class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center border-2 border-primary/30">
                                            <i class="fas fa-server text-2xl"></i>
                                        </div>
                                    <% } %>
                                    <div>
                                        <h3 class="text-xl font-bold mb-1"><%= guild.name %></h3>
                                        <div class="flex items-center gap-4 text-sm text-gray-400">
                                            <span><i class="fas fa-users mr-2"></i><%= guild.memberCount.toLocaleString() %> members</span>
                                            <span><i class="fas fa-calendar mr-2"></i>Joined <%= guild.createdAt.toLocaleDateString() %></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <a href="/dashboard/<%= guild.id %>" class="px-6 py-2.5 bg-primary/20 border border-primary/40 rounded-xl font-bold hover:bg-primary/30 transition-all">
                                        <i class="fas fa-cog mr-2"></i>Configure
                                    </a>
                                    <button onclick="copyId('<%= guild.id %>')" class="px-4 py-2.5 bg-dark/50 border border-primary/20 rounded-xl hover:bg-dark/70 transition-all" title="Copy ID">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Copy server ID
        function copyId(id) {
            navigator.clipboard.writeText(id);
            alert('Server ID copied: ' + id);
        }

        // Search guilds
        document.getElementById('searchGuilds').addEventListener('input', function(e) {
            const search = e.target.value.toLowerCase();
            const items = document.querySelectorAll('.guild-item');
            items.forEach(item => {
                const name = item.getAttribute('data-name');
                item.style.display = name.includes(search) ? 'block' : 'none';
            });
        });

        // Sort guilds
        document.getElementById('sortGuilds').addEventListener('change', function(e) {
            const container = document.getElementById('guildList');
            const items = Array.from(container.querySelectorAll('.guild-item'));
            const sortBy = e.target.value;

            items.sort((a, b) => {
                if (sortBy === 'members') {
                    return parseInt(b.getAttribute('data-members')) - parseInt(a.getAttribute('data-members'));
                } else if (sortBy === 'name') {
                    return a.getAttribute('data-name').localeCompare(b.getAttribute('data-name'));
                } else if (sortBy === 'date') {
                    return parseInt(b.getAttribute('data-date')) - parseInt(a.getAttribute('data-date'));
                }
            });

            items.forEach(item => container.appendChild(item));
        });
    </script>
</body>
</html>
